### Settings from original zathurarc ###
set selection-clipboard clipboard
set selection-clipboard clipboard

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#ecd9d3'
set completion-bg '#080D07'

# Command line completion group elements
set completion-group-fg '#236993'
set completion-group-bg '#080D07'

# Current command line completion element
set completion-highlight-fg '#080D07'
set completion-highlight-bg '#ecd9d3'

# Default foreground/background color
set default-bg rgba(8,13,7,0.85)

# Input bar
set inputbar-fg '#ecd9d3'
set inputbar-bg '#080D07'

# Notification
set notification-fg '#ecd9d3'
set notification-bg '#080D07'

# Error notification
set notification-error-fg '#ecd9d3'
set notification-error-bg '#B99570'

# Warning notification
set notification-warning-fg '#ecd9d3'
set notification-warning-bg '#B99570'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#ecd9d3'
set statusbar-bg '#080D07'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#236993'
set highlight-active-color '#236993'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#ecd9d3'

# 'Loading...' text
set render-loading-fg '#ecd9d3'
set render-loading-bg '#080D07'

# Index mode
set index-fg '#ecd9d3'
set index-bg '#080D07'

# Selected element in index mode
set index-active-fg '#080D07'
set index-active-bg '#ecd9d3'