### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#eeece3'
set completion-bg '#121215'

# Command line completion group elements
set completion-group-fg '#416891'
set completion-group-bg '#121215'

# Current command line completion element
set completion-highlight-fg '#121215'
set completion-highlight-bg '#eeece3'

# Default foreground/background color
set default-bg rgba(18,18,21,0.85)

# Input bar
set inputbar-fg '#eeece3'
set inputbar-bg '#121215'

# Notification
set notification-fg '#eeece3'
set notification-bg '#121215'

# Error notification
set notification-error-fg '#eeece3'
set notification-error-bg '#CA9C6D'

# Warning notification
set notification-warning-fg '#eeece3'
set notification-warning-bg '#CA9C6D'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#eeece3'
set statusbar-bg '#121215'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#416891'
set highlight-active-color '#416891'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#eeece3'

# 'Loading...' text
set render-loading-fg '#eeece3'
set render-loading-bg '#121215'

# Index mode
set index-fg '#eeece3'
set index-bg '#121215'

# Selected element in index mode
set index-active-fg '#121215'
set index-active-bg '#eeece3'