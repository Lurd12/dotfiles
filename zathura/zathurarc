### Settings from original zathurarc ###
set selection-clipboard clipboard
set selection-clipboard clipboard

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d59a9a'
set completion-bg '#0c0406'

# Command line completion group elements
set completion-group-fg '#CE131A'
set completion-group-bg '#0c0406'

# Current command line completion element
set completion-highlight-fg '#0c0406'
set completion-highlight-bg '#d59a9a'

# Default foreground/background color
set default-bg rgba(12,4,6,0.85)

# Input bar
set inputbar-fg '#d59a9a'
set inputbar-bg '#0c0406'

# Notification
set notification-fg '#d59a9a'
set notification-bg '#0c0406'

# Error notification
set notification-error-fg '#d59a9a'
set notification-error-bg '#9D2721'

# Warning notification
set notification-warning-fg '#d59a9a'
set notification-warning-bg '#9D2721'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#d59a9a'
set statusbar-bg '#0c0406'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#CE131A'
set highlight-active-color '#CE131A'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d59a9a'

# 'Loading...' text
set render-loading-fg '#d59a9a'
set render-loading-bg '#0c0406'

# Index mode
set index-fg '#d59a9a'
set index-bg '#0c0406'

# Selected element in index mode
set index-active-fg '#0c0406'
set index-active-bg '#d59a9a'